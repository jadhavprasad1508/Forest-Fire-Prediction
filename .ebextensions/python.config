option_settings:
  # 1. Configuration for the Python Container
  aws:elasticbeanstalk:container:python:
    # CRITICAL: This tells Elastic Beanstalk where to find your WSGI application entry point.
    # Since your main file is named application.py, we set the path to that file.
    # EB will then look for the 'application' object inside this file.
    WSGIPath: application.py